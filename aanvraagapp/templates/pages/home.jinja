{% extends "layouts/authenticated.jinja" %}

{% block title %}Home - {{ super() }}{% endblock %}

{% block content %}
    <div class="space-y-8">
        <!-- Welcome Header -->
        <div class="mb-8 animate-pulse">
            <h1 class="text-4xl font-bold bg-gradient-to-r from-accent to-accent-secondary bg-clip-text text-transparent mb-2">Home</h1>
            <p class="text-text-secondary text-lg">{{ greeting }}</p>
        </div>

        <!-- User Information Card -->
        <div class="bg-bg-secondary rounded-xl shadow-lg border border-border p-6">
            <h2 class="text-2xl font-semibold text-text-primary mb-6 flex items-center gap-3">
                <svg class="w-6 h-6 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                </svg>
                User Information
            </h2>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="space-y-4">
                    <div class="flex items-center gap-3">
                        <span class="text-text-secondary font-medium min-w-24">First Name:</span>
                        <span class="text-text-primary font-semibold">{{ user_info.first_name }}</span>
                    </div>
                    <div class="flex items-center gap-3">
                        <span class="text-text-secondary font-medium min-w-24">Last Name:</span>
                        <span class="text-text-primary font-semibold">{{ user_info.last_name }}</span>
                    </div>
                </div>
                <div class="space-y-4">
                    <div class="flex items-center gap-3">
                        <span class="text-text-secondary font-medium min-w-24">Email:</span>
                        <span class="text-text-primary font-semibold">{{ user_info.email }}</span>
                    </div>
                    <div class="flex items-center gap-3">
                        <span class="text-text-secondary font-medium min-w-24">Member Since:</span>
                        <span class="text-text-primary font-semibold">{{ user_info.created_date }}</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Statistics Cards -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <!-- Listings Card -->
            <div class="bg-bg-secondary rounded-xl shadow-lg border border-border p-6 hover:shadow-xl transition-shadow duration-300">
                <div class="flex items-center justify-between mb-4">
                    <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
                        <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
                        </svg>
                    </div>
                </div>
                <h3 class="text-lg font-semibold text-text-primary mb-2">Listings</h3>
                <p class="text-3xl font-bold text-blue-600 mb-2">{{ statistics.listings }}</p>
                <p class="text-text-secondary text-sm">Total listings you have access to</p>
            </div>

            <!-- Applications Card -->
            <div class="bg-bg-secondary rounded-xl shadow-lg border border-border p-6 hover:shadow-xl transition-shadow duration-300">
                <div class="flex items-center justify-between mb-4">
                    <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center">
                        <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                        </svg>
                    </div>
                </div>
                <h3 class="text-lg font-semibold text-text-primary mb-2">Applications</h3>
                <p class="text-3xl font-bold text-green-600 mb-2">{{ statistics.applications }}</p>
                <p class="text-text-secondary text-sm">Total applications in your portfolio</p>
            </div>

            <!-- Providers Card -->
            <div class="bg-bg-secondary rounded-xl shadow-lg border border-border p-6 hover:shadow-xl transition-shadow duration-300">
                <div class="flex items-center justify-between mb-4">
                    <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center">
                        <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                        </svg>
                    </div>
                </div>
                <h3 class="text-lg font-semibold text-text-primary mb-2">Providers</h3>
                <p class="text-3xl font-bold text-purple-600 mb-2">{{ statistics.providers }}</p>
                <p class="text-text-secondary text-sm">Unique providers you work with</p>
            </div>
        </div>
    </div>
{% endblock %}