{% extends "layouts/authenticated.jinja" %}

{% block content %}
<div class="space-y-8">
    <!-- Header -->
    <div class="flex items-center justify-between">
        <div class="flex items-center">
            <a href="{{ url_for('get_clients_page') }}" class="inline-flex items-center text-text-secondary hover:text-accent transition-colors mr-6">
                <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
                </svg>
                Back to Clients
            </a>
            <div>
                <h1 class="text-3xl font-bold text-text-primary mb-2">Client Details</h1>
                <p class="text-text-secondary">View and manage client information</p>
            </div>
        </div>
        <div class="flex items-center space-x-3">
            <a href="{{ url_for('get_new_client_page') }}" class="inline-flex items-center px-4 py-2 bg-accent text-bg-primary font-medium rounded-lg hover:bg-accent/90 transition-colors duration-200">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
                </svg>
                Add Another Client
            </a>
        </div>
    </div>

    <!-- Client Information -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Main Info Card -->
        <div class="lg:col-span-2">
            <div class="bg-bg-card border border-border rounded-xl p-8">
                <div class="flex items-start justify-between mb-6">
                    <div class="flex items-center">
                        <div class="w-16 h-16 bg-gradient-to-br from-accent to-accent-secondary rounded-xl flex items-center justify-center mr-4">
                            <svg class="w-8 h-8 text-bg-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9v-9m0-9v9"/>
                            </svg>
                        </div>
                        <div>
                            <h2 class="text-2xl font-bold text-text-primary">{{ client.name }}</h2>
                            <p class="text-text-secondary">Client ID: {{ client.id }}</p>
                        </div>
                    </div>
                    <div class="text-right">
                        <div class="text-sm text-text-secondary">Status</div>
                        <div class="inline-flex items-center px-3 py-1 bg-green-500/10 text-green-400 rounded-full text-sm font-medium">
                            <div class="w-2 h-2 bg-green-400 rounded-full mr-2"></div>
                            Active
                        </div>
                    </div>
                </div>

                <div class="space-y-6">
                    <!-- Client Information -->
                    <div>
                        <h3 class="text-lg font-semibold text-text-primary mb-4">Client Information</h3>
                        <div class="bg-bg-secondary border border-border rounded-lg p-4">
                            <div class="space-y-3">
                                <div>
                                    <p class="text-sm text-text-secondary mb-1">Client Name</p>
                                    <p class="text-text-primary font-medium">{{ client.name }}</p>
                                </div>
                                <div>
                                    <p class="text-sm text-text-secondary mb-1">Website URL</p>
                                    <a href="{{ client.website }}" target="_blank" rel="noopener noreferrer" class="text-accent hover:text-accent/80 font-medium break-all">
                                        {{ client.website }}
                                    </a>
                                </div>
                            </div>
                            <div class="mt-4 pt-3 border-t border-border">
                                <a href="{{ client.website }}" target="_blank" rel="noopener noreferrer" class="inline-flex items-center px-3 py-1 bg-accent/10 text-accent rounded-lg text-sm hover:bg-accent/20 transition-colors">
                                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                                    </svg>
                                    Visit Website
                                </a>
                            </div>
                        </div>
                    </div>

                    <!-- Timestamps -->
                    <div>
                        <h3 class="text-lg font-semibold text-text-primary mb-4">Timeline</h3>
                        <div class="space-y-3">
                            <div class="flex items-center justify-between py-3 border-b border-border last:border-b-0">
                                <div class="flex items-center">
                                    <div class="w-8 h-8 bg-blue-500/10 rounded-full flex items-center justify-center mr-3">
                                        <svg class="w-4 h-4 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                        </svg>
                                    </div>
                                    <div>
                                        <p class="text-text-primary font-medium">Created</p>
                                        <p class="text-sm text-text-secondary">{{ client.created_at.strftime('%B %d, %Y at %I:%M %p') }}</p>
                                    </div>
                                </div>
                            </div>
                            <div class="flex items-center justify-between py-3 border-b border-border last:border-b-0">
                                <div class="flex items-center">
                                    <div class="w-8 h-8 bg-green-500/10 rounded-full flex items-center justify-center mr-3">
                                        <svg class="w-4 h-4 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
                                        </svg>
                                    </div>
                                    <div>
                                        <p class="text-text-primary font-medium">Last Updated</p>
                                        <p class="text-sm text-text-secondary">{{ client.updated_at.strftime('%B %d, %Y at %I:%M %p') }}</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="space-y-6">
            <!-- Quick Actions -->
            <div class="bg-bg-card border border-border rounded-xl p-6">
                <h3 class="text-lg font-semibold text-text-primary mb-4">Quick Actions</h3>
                <div class="space-y-3">
                    <a href="{{ url_for('get_new_client_page') }}" class="w-full flex items-center px-4 py-3 bg-accent/10 text-accent rounded-lg hover:bg-accent/20 transition-colors">
                        <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
                        </svg>
                        Add New Client
                    </a>
                    <a href="{{ url_for('get_clients_page') }}" class="w-full flex items-center px-4 py-3 bg-bg-secondary text-text-primary rounded-lg hover:bg-accent/10 hover:text-accent transition-colors">
                        <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
                        </svg>
                        View All Clients
                    </a>
                </div>
            </div>

            <!-- Client Stats -->
            <div class="bg-bg-card border border-border rounded-xl p-6">
                <h3 class="text-lg font-semibold text-text-primary mb-4">Client Statistics</h3>
                <div class="space-y-4">
                    <div class="flex items-center justify-between">
                        <span class="text-text-secondary">Days Active</span>
                        <span class="text-text-primary font-medium">
                            {% set days = ((client.updated_at - client.created_at).days) %}
                            {{ days if days > 0 else 1 }}
                        </span>
                    </div>
                    <div class="flex items-center justify-between">
                        <span class="text-text-secondary">Created</span>
                        <span class="text-text-primary font-medium">{{ client.created_at.strftime('%b %d') }}</span>
                    </div>
                    <div class="flex items-center justify-between">
                        <span class="text-text-secondary">Last Activity</span>
                        <span class="text-text-primary font-medium">{{ client.updated_at.strftime('%b %d') }}</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %} 