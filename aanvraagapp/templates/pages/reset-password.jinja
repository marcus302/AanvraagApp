{% extends "layouts/standalone.jinja" %}

{% block title %}Reset Password - {{ super() }}{% endblock %}

{% block content %}
    <div class="flex items-center justify-center min-h-screen">
        <div class="w-full max-w-md">
            <div class="mb-8 text-center">
                <h1 class="text-4xl font-bold bg-gradient-to-r from-accent to-accent-secondary bg-clip-text text-transparent mb-2">Reset Password</h1>
                <p class="text-text-secondary text-lg">Set a new password for your account</p>
            </div>
            
            {% if success %}
            <div class="mb-6 p-4 bg-green-500/10 border border-green-500/20 rounded-xl text-green-400">
                <p>Your password has been succesfully reset. You can now login</p>
                <p class="mt-2"><a href="/login" class="text-accent hover:underline">Login here</a></p>
            </div>
            {% endif %}

            {% if expired %}
            <div class="mb-6 p-4 bg-yellow-500/10 border border-yellow-500/20 rounded-xl text-yellow-400">
                <p>Your link to reset your password has expired. You can request a new link below.</p>
                <p class="mt-2"><a href="/forgot-password" class="text-accent hover:underline">Request a new password</a></p>
            </div>
            {% endif %}

            {% if error %}
            <div class="mb-6 p-4 bg-red-500/10 border border-red-500/20 rounded-xl text-red-400">
                <p>Something went wrong and we are not sure what precisely. We are working on it. You can contact us if this can't wait.</p>
                <p class="mt-2"><a href="/contact" class="text-accent hover:underline">Contact us</a></p>
            </div>
            {% endif %}

            {% if token %}
            <form method="post" action="/reset-password" class="space-y-6">
                <div>
                    <label for="new_password" class="block text-text-primary font-medium mb-2">Enter new password:</label>
                    <input type="password" id="new_password" name="new_password" required 
                           class="w-full px-4 py-3 bg-bg-card border border-border rounded-xl text-text-primary placeholder-text-secondary focus:outline-none focus:border-accent transition-colors">
                    <input type="hidden" name="token" value="{{token}}">
                </div>
                <button type="submit" 
                        class="w-full px-6 py-3 bg-gradient-to-r from-accent to-accent-secondary text-bg-primary font-medium rounded-xl hover:shadow-lg hover:-translate-y-0.5 transition-all duration-300">
                    Set new password
                </button>
            </form>
            {% endif %}
        </div>
    </div>
{% endblock %}