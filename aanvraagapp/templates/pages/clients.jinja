{% extends "layouts/authenticated.jinja" %}

{% block content %}
<div class="space-y-8">
    <!-- Header -->
    <div class="flex items-center justify-between">
        <div>
            <h1 class="text-3xl font-bold text-text-primary mb-2">Clients</h1>
            <p class="text-text-secondary">Manage your client relationships</p>
        </div>
        <a href="{{ url_for('get_new_client_page') }}" class="inline-flex items-center px-6 py-3 bg-accent text-bg-primary font-medium rounded-xl hover:bg-accent/90 transition-colors duration-200 shadow-lg">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
            </svg>
            Add New Client
        </a>
    </div>

    <!-- Clients Grid -->
    {% if clients %}
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {% for client in clients %}
            <div class="bg-bg-card border border-border rounded-xl p-6 hover:border-accent/30 transition-all duration-200 group">
                <div class="flex items-start justify-between mb-4">
                    <div class="w-12 h-12 bg-gradient-to-br from-accent to-accent-secondary rounded-lg flex items-center justify-center">
                        <svg class="w-6 h-6 text-bg-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9v-9m0-9v9"/>
                        </svg>
                    </div>
                    <div class="text-xs text-text-secondary">
                        ID: {{ client.id }}
                    </div>
                </div>
                
                <div class="space-y-3">
                    <div>
                        <h3 class="font-semibold text-text-primary group-hover:text-accent transition-colors">
                            {{ client.website }}
                        </h3>
                        <p class="text-sm text-text-secondary mt-1">
                            Website
                        </p>
                    </div>
                    
                    <div class="text-xs text-text-secondary">
                        <p>Created: {{ client.created_at.strftime('%B %d, %Y') }}</p>
                        <p>Updated: {{ client.updated_at.strftime('%B %d, %Y') }}</p>
                    </div>
                </div>
                
                <div class="mt-6 pt-4 border-t border-border">
                    <a href="{{ url_for('get_client_detail_page', client_id=client.id) }}" class="inline-flex items-center text-accent hover:text-accent/80 text-sm font-medium transition-colors">
                        View Details
                        <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                        </svg>
                    </a>
                </div>
            </div>
            {% endfor %}
        </div>
    {% else %}
        <!-- Empty State -->
        <div class="text-center py-12">
            <div class="w-24 h-24 bg-bg-card border border-border rounded-full flex items-center justify-center mx-auto mb-6">
                <svg class="w-12 h-12 text-text-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
                </svg>
            </div>
            <h3 class="text-xl font-semibold text-text-primary mb-2">No clients yet</h3>
            <p class="text-text-secondary mb-6">Get started by adding your first client</p>
            <a href="{{ url_for('get_new_client_page') }}" class="inline-flex items-center px-6 py-3 bg-accent text-bg-primary font-medium rounded-xl hover:bg-accent/90 transition-colors duration-200">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
                </svg>
                Add Your First Client
            </a>
        </div>
    {% endif %}
</div>
{% endblock %} 