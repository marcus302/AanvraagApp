{% extends "layouts/authenticated.jinja" %}

{% block content %}
<div class="space-y-8">
    <!-- Header -->
    <div class="flex items-center justify-between">
        <div>
            <h1 class="text-3xl font-bold text-text-primary mb-2">Providers</h1>
            <p class="text-text-secondary">Manage your provider relationships</p>
        </div>
    </div>

    <!-- Providers Grid -->
    {% if providers %}
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {% for provider in providers %}
            <div class="bg-bg-card border border-border rounded-xl p-6 hover:border-accent/30 transition-all duration-200 group">
                <div class="flex items-start justify-between mb-4">
                    <div class="w-12 h-12 bg-gradient-to-br from-accent to-accent-secondary rounded-lg flex items-center justify-center">
                        <svg class="w-6 h-6 text-bg-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                        </svg>
                    </div>
                    <div class="text-xs text-text-secondary">
                        ID: {{ provider.id }}
                    </div>
                </div>
                
                <div class="space-y-3">
                    <div>
                        <h3 class="font-semibold text-text-primary group-hover:text-accent transition-colors">
                            {{ provider.name }}
                        </h3>
                        <p class="text-sm text-text-secondary mt-1">
                            {{ provider.website }}
                        </p>
                    </div>
                    
                    <div class="text-xs text-text-secondary">
                        <p>Created: {{ provider.created_at.strftime('%B %d, %Y') }}</p>
                        <p>Updated: {{ provider.updated_at.strftime('%B %d, %Y') }}</p>
                    </div>
                </div>
                
                <div class="mt-6 pt-4 border-t border-border">
                    <a href="{{ url_for('get_provider_detail_page', provider_id=provider.id) }}" class="inline-flex items-center text-accent hover:text-accent/80 text-sm font-medium transition-colors">
                        View Details
                        <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                        </svg>
                    </a>
                </div>
            </div>
            {% endfor %}
        </div>
    {% else %}
        <!-- Empty State -->
        <div class="text-center py-12">
            <div class="w-24 h-24 bg-bg-card border border-border rounded-full flex items-center justify-center mx-auto mb-6">
                <svg class="w-12 h-12 text-text-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                </svg>
            </div>
            <h3 class="text-xl font-semibold text-text-primary mb-2">No providers yet</h3>
            <p class="text-text-secondary">Contact an administrator to add providers to the system</p>
        </div>
    {% endif %}
</div>
{% endblock %} 