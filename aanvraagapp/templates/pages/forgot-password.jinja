{% extends "layouts/public.jinja" %}

{% block title %}Forgot Password - {{ super() }}{% endblock %}

{% block content %}
    <div class="content-header">
        <h1 class="content-title">Forgot Password</h1>
        <p class="content-subtitle">Request a new password for your account</p>
    </div>
    
    {% if info %}
    <div class="info alert-info">
        <p>{{ info }}</p>
    </div>
    {% endif %}

    {% if not info %}
    <form method="post" action="/forgot-password">
        <div>
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" value="{{email}}" required>
        </div>
        <button type="submit">Request new password</button>
    </form>
    
    {# <div style="margin-top: 1rem;">
        <p>Don't have an account? <a href="/register">Sign up here</a></p>
    </div> #}
    {% endif %}
{% endblock %}