{% extends "layouts/public.jinja" %}

{% block title %}Forgot Password - {{ super() }}{% endblock %}

{% block content %}
    <div class="flex items-center justify-center min-h-screen">
        <div class="w-full max-w-md">
            <div class="mb-8 text-center">
                <h1 class="text-4xl font-bold bg-gradient-to-r from-accent to-accent-secondary bg-clip-text text-transparent mb-2">Forgot Password</h1>
                <p class="text-text-secondary text-lg">Request a new password for your account</p>
            </div>
            
            {% if info %}
            <div class="mb-6 p-4 bg-blue-500/10 border border-blue-500/20 rounded-xl text-blue-400">
                <p>{{ info }}</p>
            </div>
            {% endif %}

            {% if not info %}
            <form method="post" action="/forgot-password" class="space-y-6">
                <div>
                    <label for="email" class="block text-text-primary font-medium mb-2">Email:</label>
                    <input type="email" id="email" name="email" value="{{email}}" required 
                           class="w-full px-4 py-3 bg-bg-card border border-border rounded-xl text-text-primary placeholder-text-secondary focus:outline-none focus:border-accent transition-colors">
                </div>
                <button type="submit" 
                        class="w-full px-6 py-3 bg-gradient-to-r from-accent to-accent-secondary text-bg-primary font-medium rounded-xl hover:shadow-lg hover:-translate-y-0.5 transition-all duration-300">
                    Request new password
                </button>
            </form>
            
            {# <div class="mt-6 text-center">
                <p class="text-text-secondary">Don't have an account? <a href="/register" class="text-accent hover:underline">Sign up here</a></p>
            </div> #}
            {% endif %}
        </div>
    </div>
{% endblock %}