{% extends "layouts/public.jinja" %}

{% block title %}Login - {{ super() }}{% endblock %}

{% block content %}
    <div class="flex items-center justify-center min-h-screen">
        <div class="w-full max-w-md">
            <div class="mb-8 text-center">
                <h1 class="text-4xl font-bold bg-gradient-to-r from-accent to-accent-secondary bg-clip-text text-transparent mb-2">Login</h1>
                <p class="text-text-secondary text-lg">Login to your account</p>
            </div>
            
            {% if error %}
            <div class="mb-6 p-4 bg-red-500/10 border border-red-500/20 rounded-xl text-red-400">
                <p>{{ error }}</p>
            </div>
            {% endif %}
            
            <form method="post" action="{{ url_for('post_login') }}" class="space-y-6">
                <div>
                    <label for="email" class="block text-text-primary font-medium mb-2">Email:</label>
                    <input type="email" id="email" name="email" value="{{email}}" required 
                           class="w-full px-4 py-3 bg-bg-card border border-border rounded-xl text-text-primary placeholder-text-secondary focus:outline-none focus:border-accent transition-colors">
                </div>
                <div>
                    <label for="password" class="block text-text-primary font-medium mb-2">Password:</label>
                    <input type="password" id="password" name="password" value="{{password}}" required 
                           class="w-full px-4 py-3 bg-bg-card border border-border rounded-xl text-text-primary placeholder-text-secondary focus:outline-none focus:border-accent transition-colors">
                </div>
                <button type="submit" 
                        class="w-full px-6 py-3 bg-gradient-to-r from-accent to-accent-secondary text-bg-primary font-medium rounded-xl hover:shadow-lg hover:-translate-y-0.5 transition-all duration-300">
                    Login
                </button>
            </form>
            
            <div class="mt-6 text-center">
                <p class="text-text-secondary">Forgot your password? <a href="{{ url_for('get_forgot_password') }}" class="text-accent hover:underline">Request a new one here.</a></p>
            </div>
        </div>
    </div>
{% endblock %}