{% extends "base.jinja" %}

{% block body %}
    <header class="fixed top-0 left-0 right-0 h-18 bg-bg-primary/85 backdrop-blur-xl border-b border-border z-50 flex items-center px-8 shadow-lg">
        <div class="w-full max-w-7xl mx-auto flex items-center justify-between">
            <div class="relative">
                <div class="flex items-center gap-3 cursor-pointer" onclick="toggleDropdown()">
                    <div class="w-10 h-10 rounded-full bg-gradient-to-br from-accent to-accent-secondary flex items-center justify-center shadow-lg">
                        <svg class="w-6 h-6 stroke-white fill-none stroke-2" viewBox="0 0 24 24">
                            <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/>
                            <circle cx="12" cy="7" r="4"/>
                        </svg>
                    </div>
                    <span class="text-text-primary font-medium text-sm">{{ current_user.first_name }}</span>
                </div>
                <div id="userDropdown" class="absolute top-full left-0 mt-2 bg-white border border-gray-300 rounded shadow-lg min-w-32 hidden">
                    <a href="{{ url_for('get_logout') }}" class="block px-4 py-2 text-gray-700 no-underline hover:bg-gray-100">
                        Logout
                    </a>
                </div>
            </div>
            <script>
                function toggleDropdown() {
                    const dropdown = document.getElementById('userDropdown');
                    dropdown.classList.toggle('hidden');
                }
                
                // Close dropdown when clicking outside
                document.addEventListener('click', function(event) {
                    const dropdown = document.getElementById('userDropdown');
                    const userArea = event.target.closest('.relative');
                    if (!userArea) {
                        dropdown.classList.add('hidden');
                    }
                });
            </script>
            <nav>
                <ul class="flex gap-4">
                    <li class="px-6 py-3 rounded-xl font-medium tracking-wide relative overflow-hidden transition-all duration-300 {% if active_page == 'clients' %}bg-accent/10 border border-accent text-accent{% else %}hover:border-accent hover:bg-accent/5{% endif %}">
                        <a href="{{ url_for('get_clients_page') }}" class="relative z-10">Clients</a>
                    </li>
                    <li class="px-6 py-3 rounded-xl font-medium tracking-wide relative overflow-hidden transition-all duration-300 {% if active_page == 'listings' %}bg-accent/10 border border-accent text-accent{% else %}hover:border-accent hover:bg-accent/5{% endif %}">
                        <a href="/listings" class="relative z-10">Listings</a>
                    </li>
                    <li class="px-6 py-3 rounded-xl font-medium tracking-wide relative overflow-hidden transition-all duration-300 {% if active_page == 'applications' %}bg-accent/10 border border-accent text-accent{% else %}hover:border-accent hover:bg-accent/5{% endif %}">
                        <a href="/applications" class="relative z-10">Applications</a>
                    </li>
                    <li class="px-6 py-3 rounded-xl font-medium tracking-wide relative overflow-hidden transition-all duration-300 {% if active_page == 'providers' %}bg-accent/10 border border-accent text-accent{% else %}hover:border-accent hover:bg-accent/5{% endif %}">
                        <a href="/providers" class="relative z-10">Providers</a>
                    </li>
                </ul>
            </nav>
        </div>
    </header>
    <main class="mt-20 px-8 max-w-7xl mx-auto">
        <div id="content-area">
            {% block content %}
                <!-- Page-specific content goes here -->
            {% endblock %}
        </div>
    </main>
{% endblock %}